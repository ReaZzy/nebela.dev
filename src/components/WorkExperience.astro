---
import { ME } from "@/constants/me";
---

<section aria-label="Work experience">
  <h2 class="font-mono text-xl text-zinc-100 mb-4">
    <span class="text-green-400">#</span> work
  </h2>
  <div class="space-y-4">
    {
      ME.workExperience.map((work) => (
        <div>
          <div class="flex items-baseline gap-2 flex-wrap">
            {work.link ? (
              <a
                href={work.link}
                target="_blank"
                rel="noopener noreferrer"
                class="font-mono text-base text-zinc-100 hover:text-green-400 active:text-green-400 transition-colors duration-200"
              >
                {work.title}
              </a>
            ) : (
              <h3 class="font-mono text-base text-zinc-100">{work.title}</h3>
            )}
            <span class="font-mono text-sm text-zinc-400">
              {work.from} â€“ {work.to}
            </span>
          </div>
          <p class="font-mono text-sm text-zinc-400 mt-1">{work.experience}</p>
        </div>
      ))
    }
  </div>
</section>
